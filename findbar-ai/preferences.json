[
  {
    "type": "separator",
    "label": "AI Settings"
  },
  {
    "property": "extension.findbar-ai.llm-provider",
    "label": "LLM Provider",
    "type": "dropdown",
    "default": "gemini",
    "description": "Select the LLM provider (Gemini or Mistral).",
    "options": [
      { "value": "gemini", "label": "Gemini" },
      { "value": "mistral", "label": "Mistral" }
    ]
  },
  {
    "type": "separator",
    "label": "Gemini AI Settings"
  },
  {
    "property": "extension.findbar-ai.gemini-api-key",
    "label": "Gemini API Key",
    "type": "string",
    "placeholder": "Enter your Google Gemini API key",
    "default": "",
    "description": "Your personal API key from Google AI Studio. This is required for the AI features to work.",
    "conditions": [{ "if": { "property": "extension.findbar-ai.llm-provider", "value": "gemini" } }]
  },
  {
    "property": "extension.findbar-ai.gemini-model",
    "label": "Gemini Model",
    "type": "dropdown",
    "default": "gemini-2.0-flash",
    "description": "Select the Gemini model to use for chat responses.",
    "options": [
      { "value": "gemini-2.5-flash", "label": "Gemini 2.5 Flash" },
      { "value": "gemini-2.5-pro", "label": "Gemini 2.5 Pro" },
      { "value": "gemini-2.5-flash-lite", "label": "Gemini 2.5 Flash Lite" },
      { "value": "gemini-2.0-flash", "label": "Gemini 2.0 Flash" },
      { "value": "gemini-2.0-flash-lite", "label": "Gemini 2.0 Flash Lite" },
      { "value": "gemini-1.5-flash", "label": "Gemini 1.5 Flash" },
      { "value": "gemini-1.5-flash-8b", "label": "Gemini 1.5 Flash 8B" },
      { "value": "gemini-1.5-pro", "label": "Gemini 1.5 Pro" },
      { "value": "gemini-1.0-pro", "label": "Gemini 1.0 Pro" }
    ],
    "conditions": [{ "if": { "property": "extension.findbar-ai.llm-provider", "value": "gemini" } }]
  },
  {
    "type": "separator",
    "label": "Mistral AI Settings"
  },
  {
    "property": "extension.findbar-ai.mistral-api-key",
    "label": "Mistral API Key",
    "type": "string",
    "placeholder": "Enter your Mistral API key",
    "default": "",
    "description": "Your personal API key from Mistral. Required for Mistral AI features.",
    "conditions": [{ "if": { "property": "extension.findbar-ai.llm-provider", "value": "mistral" } }]
  },
  {
    "property": "extension.findbar-ai.mistral-model",
    "label": "Mistral Model",
    "type": "dropdown",
    "default": "mistral-large-latest",
    "description": "Select the Mistral model to use for chat responses.",
    "options": [
      { "value": "mistral-small", "label": "Mistral Small" },
      { "value": "mistral-large-latest", "label": "Mistral Large Latest" }
    ],
    "conditions": [{ "if": { "property": "extension.findbar-ai.llm-provider", "value": "mistral" } }]
  },
  {
    "type": "separator",
    "label": "UI Settings"
  },
  {
    "property": "extension.findbar-ai.ask-button-enabled",
    "label": "Show Ask Button",
    "type": "checkbox",
    "default": true,
    "description": "Show the Ask AI button in the findbar."
  },
  {
    "property": "extension.findbar-ai.context-menu-enabled",
    "label": "Enable Context Menu",
    "type": "checkbox",
    "default": true,
    "description": "Adds item in right click context menu for asking AI about selected content."
  },
  {
    "property": "extension.findbar-ai.context-menu-autosend",
    "label": "Context Menu Auto Send",
    "type": "checkbox",
    "default": true,
    "description": "If true, message will be automatically sent to AI after you click in context menu item.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.context-menu-enabled",
          "value": true
        }
      }
    ]
  },
  {
    "type": "separator",
    "label": "Output Settings"
  },
  {
    "property": "extension.findbar-ai.citations-enabled",
    "label": "Citations",
    "type": "checkbox",
    "default": false,
    "description": "(EXPERIMENTAL) AI will give link in page where text is from."
  },
  {
    "property": "extension.findbar-ai.markdown-enabled",
    "label": "Enable Markdown Output",
    "type": "checkbox",
    "default": true,
    "description": "Allow AI to respond in markdown syntax (headings, lists, etc)."
  },
  {
    "property": "extension.findbar-ai.show-tool-call",
    "label": "Show Tool Call Details",
    "type": "checkbox",
    "default": false,
    "description": "Show details of tool calls made by the AI (for debugging or transparency).",
    "conditions": [{ "if": { "property": "extension.findbar-ai.god-mode", "value": true } }]
  },
  {
    "property": "extension.findbar-ai.confirmation-before-tool-call",
    "label": "Confirm Before Tool Call",
    "type": "checkbox",
    "default": false,
    "description": "Ask for user confirmation before executing tool calls.",
    "conditions": [{ "if": { "property": "extension.findbar-ai.god-mode", "value": true } }]
  },
  {
    "type": "separator",
    "label": "Advanced Mode"
  },
  {
    "property": "extension.findbar-ai.god-mode",
    "label": "Advanced Mode",
    "type": "checkbox",
    "default": false,
    "description": "AI can make tool calls like opening links, searching, reading page."
  },
  {
    "type": "separator",
    "label": "Debug"
  },
  {
    "property": "extension.findbar-ai.debug-mode",
    "label": "Enable Debug Mode",
    "type": "checkbox",
    "default": false,
    "description": "Enables verbose logging in the Browser Console for troubleshooting."
  },
  {
    "property": "extension.findbar-ai.debug",
    "label": "Enable Debug Logging",
    "type": "checkbox",
    "default": false,
    "description": "Enables debug logging for Findbar AI."
  },
  {
    "property": "extension.findbar-ai.enabled",
    "label": "Enable Findbar AI",
    "type": "checkbox",
    "default": true,
    "description": "Master switch for Findbar AI features."
  }
]
